generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String
  active        Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  ActivateToken ActivatToken[]
  account       Account[]
}

model ActivatToken {
  id          Int       @id @default(autoincrement())
  token       String    @unique
  activatedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model Account {
  id         Int     @id @default(autoincrement())
  name       String
  username   String
  profilePic String?
  bio        String?
  phone      String
  address    String
  birthday   String
  user       User    @relation(fields: [userId], references: [id])
  userId     Int     @unique
  arts       Art[]
}

model Art {
  id          Int      @id @default(autoincrement())
  image       String
  title       String
  price       Float
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  account     Account  @relation(fields: [accountId], references: [id])
  accountId   Int
}
